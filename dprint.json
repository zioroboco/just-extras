{
  "includes": ["**/*.{ts,js,cjs,mjs,json}"],
  "excludes": ["**/dist", "**/node_modules"],

  "json": {
    "lineWidth": 80
  },

  "typescript": {
    "arguments.trailingCommas": "never",
    "lineWidth": 80,
    "semiColons": "asi"
  },

  "plugins": [
    "https://plugins.dprint.dev/typescript-0.69.5.wasm",
    "https://plugins.dprint.dev/json-0.15.3.wasm"
  ]
}
